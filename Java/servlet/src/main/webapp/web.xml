<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	                    http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0" metadata-complete="true">
	
	
	<servlet>
		<servlet-name>RegistHttpServlet</servlet-name>
		<servlet-class>me.qinchao.request.RegistHttpServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>RegistHttpServlet</servlet-name>
		<url-pattern>/regist</url-pattern>		
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>RequestHttpServlet</servlet-name>
		<servlet-class>me.qinchao.request.RequestHttpServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>RequestHttpServlet</servlet-name>
		<url-pattern>/request</url-pattern>		
	</servlet-mapping>

	<servlet>
		<servlet-name>HelloServlet</servlet-name>
		<servlet-class>me.qinchao.hello.HelloServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>HelloServlet</servlet-name>
		<url-pattern>/hello</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>HelloServletConfig</servlet-name>
		<servlet-class>me.qinchao.hello.HelloServletConfig</servlet-class>
		
		<init-param>
			<param-name>language</param-name>
			<param-value>en</param-value>
		</init-param>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf</param-value>
		</init-param>
		
		
	</servlet>
	
	<servlet-mapping>
		<servlet-name>HelloServletConfig</servlet-name>
		<url-pattern>/config</url-pattern>
	</servlet-mapping>
</web-app>
