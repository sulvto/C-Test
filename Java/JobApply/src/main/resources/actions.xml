<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="cityAction" class="me.qinchao.web.action.CityAction" scope="prototype">
		<property name="service" ref="cityService" />
	</bean>
	<bean id="tradeAction" class="me.qinchao.web.action.TradeAction" scope="prototype">
		<property name="service" ref="tradeService" />
	</bean>
	<bean id="salaryLevelAction" class="me.qinchao.web.action.SalaryLevelAction" scope="prototype">
		<property name="service" ref="salaryLevelService" />
	</bean>
	<bean id="companyTypeAction" class="me.qinchao.web.action.CompanyTypeAction" scope="prototype">
		<property name="service" ref="companyTypeService" />
	</bean>
	<bean id="companyAction" class="me.qinchao.web.action.CompanyAction" scope="prototype">
		<property name="service" ref="companyService" />
		<property name="companyTypeService" ref="companyTypeService" />
	</bean>
	
	<bean id="jobApplyAction" class="me.qinchao.web.action.JobApplyAction" scope="prototype">
		<property name="service" ref="jobApplyService" />
		<property name="companyService" ref="companyService" />
		<property name="tradeService" ref="tradeService" />
		<property name="cityService" ref="cityService" />
		<property name="salaryLevelService" ref="salaryLevelService" />
	</bean>
	<bean id="jobApplySearchAction" class="me.qinchao.web.action.JobApplySearchAction" scope="prototype">
		<property name="service" ref="jobApplyService" />
		<property name="companyTypeService" ref="companyTypeService" />
		<property name="tradeService" ref="tradeService" />
		<property name="cityService" ref="cityService" />
		<property name="salaryLevelService" ref="salaryLevelService" />
	</bean>

</beans>