<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- <bean id="baseDAO" abstract="true"> <property name="sessionFactory" 
		ref="sessionFactory" /> </bean> -->

	<bean id="genericDAO" class="cd.itcast.ssh.dao.impl.AbstractGenericDAOImpl"
		abstract="true">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	
	<bean id="cityDAO" class="cd.itcast.ssh.dao.impl.CityDAOImpl" parent="genericDAO" />
	<bean id="tradeDAO" class="cd.itcast.ssh.dao.impl.TradeDAOImpl" parent="genericDAO" />
	<bean id="companyTypeDAO" class="cd.itcast.ssh.dao.impl.CompanyTypeDAOImpl" parent="genericDAO" />
	<bean id="companyDAO" class="cd.itcast.ssh.dao.impl.CompanyDAOImpl" parent="genericDAO" />
	<bean id="salaryLevelDAO" class="cd.itcast.ssh.dao.impl.SalaryLevelDAOImpl" parent="genericDAO" />
	<bean id="jobApplyDAO" class="cd.itcast.ssh.dao.impl.JobApplyDAOImpl" parent="genericDAO" />
</beans>