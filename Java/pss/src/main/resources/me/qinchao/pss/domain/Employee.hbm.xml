<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="me.qinchao.pss.domain">

	<class name="me.qinchao.pss.domain.Employee">
		<id name="id">
			<generator class="native" />
		</id>
		<property name="name" />
		<property name="password" />
		<property name="email" />
		<property name="age" />
		<many-to-one name="department" class="me.qinchao.pss.domain.Department" column="department_id" />
		<!-- // 单向多对多：当前角色拥有的资源列表 -->
		<!-- private Set<Role> roles = new HashSet<Role>(); -->
		<set name="roles" table="EmployeeRole">
			<key column="employee_id" />
			<many-to-many class="me.qinchao.pss.domain.Role" column="role_id" />
		</set>
	</class>
</hibernate-mapping>
